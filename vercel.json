{
  "redirects": [
    { "source": "/", "destination": "/auth/login", "permanent": true }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://autologapi-production.up.railway.app/api/$1"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "https://autologapi-production.up.railway.app/uploads/$1"
    },
    {
      "source": "/((?!api|uploads|.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/((?!.*\\.).*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    }
  ]
}
